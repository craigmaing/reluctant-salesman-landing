---
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Sales Training for Financial Professionals Who Prefer Building Relationships Over Pushing Products. Learn authentic selling from someone who understands your reluctance." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / LinkedIn -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://thereluctantsalesman.com/" />
    <meta property="og:site_name" content="The Reluctant Salesman" />
    <meta property="og:image" content="https://og-image.vercel.app/**Sales%20Training%20for%20Financial%20Professionals**.png?theme=light&md=1&fontSize=100px&images=https%3A%2F%2Fassets.vercel.com%2Fimage%2Fupload%2Ffront%2Fassets%2Fdesign%2Fvercel-triangle-black.svg&widths=350&heights=350" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="627" />
    
    <!-- Canonical URL -->
    <link rel="canonical" href="https://thereluctantsalesman.com/" />
    
    <title>{title}</title>
    
    <!-- Structured Data for SEO -->
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "The Reluctant Salesman",
        "description": "Authentic sales training for financial professionals in Southwest UK who prefer building relationships over pushing products",
        "url": "https://thereluctantsalesman.com",
        "telephone": "07795835110",
        "email": "terry@thereluctantsalesman.com",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Exeter",
          "addressRegion": "Devon",
          "addressCountry": "UK"
        },
        "areaServed": {
          "@type": "Place",
          "name": "Southwest UK"
        },
        "priceRange": "£495-£2,800",
        "founder": {
          "@type": "Person",
          "name": "Terry Mullins",
          "jobTitle": "Founder & Sales Trainer"
        },
        "offers": {
          "@type": "Offer",
          "name": "Financial Services Sales Training Workshop",
          "price": "495",
          "priceCurrency": "GBP",
          "availability": "https://schema.org/InStock",
          "validFrom": "2025-01-20",
          "url": "https://thereluctantsalesman.com#workshop"
        }
      })}
    </script>
  </head>
  <body>
    <slot />
  </body>
</html>